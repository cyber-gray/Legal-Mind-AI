# Legal-Mind-AI Configuration Template
# Copy this file to .env and fill in your actual values

# =============================================================================
# AZURE OPENAI CONFIGURATION (Required)
# =============================================================================
# Your Azure OpenAI resource endpoint
AZURE_OPENAI_ENDPOINT=https://your-resource.openai.azure.com/

# Your Azure OpenAI API key
AZURE_OPENAI_API_KEY=your-api-key-here

# Your Azure OpenAI deployment name (e.g., gpt-4, gpt-35-turbo)
AZURE_OPENAI_DEPLOYMENT_NAME=your-deployment-name

# API Version (recommended: 2024-10-21)
AZURE_OPENAI_API_VERSION=2024-10-21

# =============================================================================
# AZURE AI FOUNDRY / PROJECTS CONFIGURATION (Optional - for future migration)
# =============================================================================
# Azure AI Project endpoint
AZURE_AI_PROJECT_ENDPOINT=https://your-project.openai.azure.com/

# Azure AI Project connection string
AZURE_AI_PROJECT_CONNECTION_STRING=your-connection-string

# Project name in Azure AI Studio
AZURE_AI_PROJECT_NAME=your-project-name

# Subscription ID
AZURE_SUBSCRIPTION_ID=your-subscription-id

# Resource Group name
AZURE_RESOURCE_GROUP=your-resource-group

# =============================================================================
# AZURE STORAGE CONFIGURATION (Required for conversation persistence)
# =============================================================================
# Azure Storage Account connection string
AZURE_STORAGE_CONNECTION_STRING=DefaultEndpointsProtocol=https;AccountName=your-storage-account;AccountKey=your-key;EndpointSuffix=core.windows.net

# Storage container name for conversations
AZURE_STORAGE_CONTAINER_NAME=legal-mind-group-chat

# =============================================================================
# AZURE AI SEARCH CONFIGURATION (Optional - for RAG integration)
# =============================================================================
# Azure AI Search service endpoint
AZURE_SEARCH_ENDPOINT=https://your-search-service.search.windows.net

# Azure AI Search admin key
AZURE_SEARCH_ADMIN_KEY=your-search-admin-key

# Search index name for legal knowledge base
AZURE_SEARCH_INDEX_NAME=legal-knowledge

# =============================================================================
# CONTENT SAFETY CONFIGURATION (Optional - for governance)
# =============================================================================
# Azure Content Safety endpoint
CONTENT_SAFETY_ENDPOINT=https://your-content-safety.cognitiveservices.azure.com/

# Azure Content Safety key
CONTENT_SAFETY_KEY=your-content-safety-key

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================
# Environment (development, staging, production)
ENVIRONMENT=development

# Application name
APP_NAME=Legal-Mind-AI

# Version
APP_VERSION=2.0.0

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================
# Log level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# Log to file (true/false)
LOG_TO_FILE=false

# Log file path
LOG_FILE_PATH=logs/legal_mind.log

# =============================================================================
# PERFORMANCE TUNING
# =============================================================================
# Maximum tokens per response
MAX_TOKENS=4000

# Temperature for AI responses (0.0-1.0)
TEMPERATURE=0.7

# Maximum conversation history length
MAX_CONVERSATION_HISTORY=10

# Request timeout in seconds
REQUEST_TIMEOUT=60

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================
# Enable PII detection (true/false)
ENABLE_PII_DETECTION=true

# Enable content safety filtering (true/false)
ENABLE_CONTENT_SAFETY=true

# Enable audit logging (true/false)
ENABLE_AUDIT_LOGGING=true